<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Select Student</title>
</head>
<body>
    <div class="container">
        <h1>Select Student</h1>
        <form action="/select" method="POST" class="form">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="skill1">Skill 1:</label>
                <input type="text" id="skill1" name="skill1" class="form-control">
            </div>
            <div class="form-group">
                <label for="skill2">Skill 2:</label>
                <input type="text" id="skill2" name="skill2" class="form-control">
            </div>
            <div class="form-group">
                <label for="skill3">Skill 3:</label>
                <input type="text" id="skill3" name="skill3" class="form-control">
            </div>
            <div class="form-actions">
                <button type="submit" class="button">Search</button>
            </div>
        </form>

        <% if (typeof students !== 'undefined' && students.length > 0) { %>
            <h2>Search Results:</h2>
            <ul class="results-list">
                <% students.forEach(student => { %>
                    <li><%= student.name %> - <%= student.department %> - <%= student.course %></li>
                <% }) %>
            </ul>
        <% } else if (typeof students !== 'undefined') { %>
            <p>No students found.</p>
        <% } %>

        <div class="actions">
            <a href="/" class="button">Home</a>
        </div>
    </div>
</body>
</html>
